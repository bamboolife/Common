<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--底部导航控制器-->
    <declare-styleable name="MainNavigateTabBar">
        <attr name="navigateTabTextColor" format="color|reference" />
        <attr name="navigateTabSelectedTextColor" format="color|reference" />
        <attr name="containerId" format="integer|reference" />
        <attr name="navigateTabTextSize" format="dimension|reference" />
    </declare-styleable>


    <declare-styleable name="XEditText">
        <attr name="x_separator" format="string" />
        <attr name="x_disableClear" format="boolean" />
        <attr name="x_clearDrawable" format="reference" />
        <attr name="x_showPwdDrawable" format="reference" />
        <attr name="x_hidePwdDrawable" format="reference" />
        <attr name="x_disableEmoji" format="boolean" />
        <attr name="x_disableTogglePwdDrawable" format="boolean" />
    </declare-styleable>
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color2" format="color" />
    </declare-styleable>
    <declare-styleable name="HwLoadingView">
        <!-- 控件大小-->
        <attr name="v_size" format="dimension" />
        <attr name="v_color" format="color"/>
        <attr name="a_duration" format="integer"/>
    </declare-styleable>

    <declare-styleable name="RotateDotView">
        <!-- 开始颜色 -->
        <attr name="rdv_start_color" format="color|reference" />
        <!-- 结束颜色 -->
        <attr name="rdv_end_color" format="color|reference" />
        <!-- 圆点数量 -->
        <attr name="rdv_dot_count" format="integer|dimension" />
        <!-- 圆点大小 -->
        <attr name="rdv_dot_radius" format="integer|float|dimension" />
        <!-- 是否自动开启旋转，默认开启 -->
        <attr name="rdv_auto_start" format="boolean" />
        <!-- 每次旋转的角度 -->
        <attr name="rdv_rotate_angle" format="integer|dimension" />
        <!-- 点模式，普通模式、缩放模式 -->
        <attr name="rdv_dot_mode" format="enum">
            <enum name="normal" value="1" />
            <enum name="scale" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="CropImageView">

        <!--裁剪对齐位置的枚举值，无法与下面的两个crop_percent共存，同时存在时以crop_percent为准-->
        <attr name="crop_type" format="enum">
            <enum name="center" value="0" />
            <enum name="centerLeft" value="1" />
            <enum name="centerRight" value="2" />
            <enum name="centerTop" value="3" />
            <enum name="centerBottom" value="4" />
            <enum name="topLeft" value="5" />
            <enum name="topRight" value="6" />
            <enum name="bottomLeft" value="7" />
            <enum name="bottomRight" value="8" />
        </attr>

        <!--无法与上面的crop_type共存，同时存在时以crop_percent为准-->
        <!--X方向的对齐位置，取值范围0~1-->
        <attr name="crop_percent_x" format="float" />
        <!--X方向的对齐位置，取值范围0~1-->
        <attr name="crop_percent_y" format="float" />

        <attr name="crop_auto_move" format="boolean" />
        <attr name="crop_auto_move_duration" format="integer" />

        <attr name="crop_scale" format="float" />

    </declare-styleable>
</resources>